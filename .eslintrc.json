{
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "extends": [
        "plugin:@typescript-eslint/recommended",
        "prettier/@typescript-eslint",
        "plugin:prettier/recommended"
    ],
    "env": { "node": true },
    "rules": {
        "indent": "off",
        "@typescript-eslint/indent": "off",
        "prettier/prettier": 2
    }
}